{
  "name": "vanilla-sharing",
  "description": "Small simple tool for sharing url, title, description and image to VK, Facebook, OK, G+, Twitter and Mail",
  "keywords": ["sharing", "vk", "facebook", "g+", "twiiter", "socials", "mail"],
  "homepage": "https://github.com/avdeev/vanilla-sharing",
  "bugs": "https://github.com/avdeev/vanilla-sharing/issues",
  "version": "0.4.0",
  "main": "src/index.js",
  "scripts": {
    "prebuild": "npm run build:clean",
    "build": "webpack",
    "build:clean": "rimraf ./build",
    "lint": "eslint --ignore-path .gitignore . --ignore-pattern build",
    "lint:staged": "lint-staged",
    "pretest": "npm run test:clean && npm run lint",
    "test:clean": "rimraf ./coverage",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll"
  },
  "repository": "git@github.com:avdeev/vanilla-sharing.git",
  "author": "Alexey Avdeev <aad.jerry@gmail.com>",
  "license": "MIT",
  "files": [
    "build",
    "src"
  ],
  "lint-staged": {
    "*.js": "lint"
  },
  "pre-commit": "lint:staged",
  "babel": {
    "presets": [
      "latest"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "env": {
      "browser": true,
      "jest": true,
      "es6": true
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testRegex": "tests/.*\\.test\\.js$"
  },
  "devDependencies": {
    "babel-core": "6.23.1",
    "babel-eslint": "7.1.1",
    "babel-loader": "6.3.2",
    "babel-polyfill": "6.23.0",
    "babel-preset-latest": "6.22.0",
    "eslint": "3.15.0",
    "eslint-config-airbnb-base": "11.1.0",
    "eslint-plugin-import": "2.2.0",
    "faker": "3.1.0",
    "jest": "18.1.0",
    "lint-staged": "3.3.1",
    "pre-commit": "1.2.2",
    "rimraf": "2.6.0",
    "webpack": "2.2.1"
  }
}
