{
  "name": "vanilla-sharing",
  "description": "Small simple tool for sharing url, title, description and image to VK, Facebook, OK, G+, Twitter and Mail",
  "keywords": [
    "sharing",
    "vk",
    "facebook",
    "g+",
    "twiiter",
    "socials",
    "mail"
  ],
  "homepage": "https://github.com/avdeev/vanilla-sharing",
  "bugs": "https://github.com/avdeev/vanilla-sharing/issues",
  "version": "1.2.0",
  "main": "dist/vanilla-sharing.js",
  "scripts": {
    "prebuild": "npm run build:clean",
    "build": "webpack",
    "build:clean": "rimraf ./dist",
    "lint": "eslint --ignore-path .gitignore . --ignore-pattern dist",
    "lint:staged": "lint-staged",
    "pretest": "npm run test:clean && npm run lint",
    "test:clean": "rimraf ./coverage",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": "git@github.com:avdeev/vanilla-sharing.git",
  "author": "Alexey Avdeev <aad.jerry@gmail.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.js": "lint"
  },
  "pre-commit": "lint:staged",
  "babel": {
    "presets": [
      "env"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "env": {
      "browser": true,
      "jest": true,
      "es6": true
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "webpack.config.js"
        }
      }
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/**/*.test.{js,jsx}"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testRegex": "tests/.*\\.test\\.js$"
  },
  "devDependencies": {
    "babel-core": "6.24.0",
    "babel-eslint": "7.1.1",
    "babel-loader": "6.4.1",
    "babel-polyfill": "6.23.0",
    "babel-preset-env": "1.2.2",
    "coveralls": "2.12.0",
    "eslint": "3.17.1",
    "eslint-config-airbnb-base": "11.1.1",
    "eslint-import-resolver-webpack": "0.8.1",
    "eslint-plugin-import": "2.2.0",
    "faker": "4.1.0",
    "jest": "19.0.2",
    "lint-staged": "3.4.0",
    "pre-commit": "1.2.2",
    "rimraf": "2.6.1",
    "webpack": "2.2.1"
  }
}
