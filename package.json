{
  "name": "vanilla-sharing",
  "description": "Small simple tool for sharing url, title, description and image to VK, Facebook, OK, G+, Twitter and Mail",
  "keywords": [
    "sharing",
    "vk",
    "facebook",
    "g+",
    "twiiter",
    "socials",
    "mail"
  ],
  "homepage": "https://github.com/avdeev/vanilla-sharing",
  "bugs": "https://github.com/avdeev/vanilla-sharing/issues",
  "version": "3.0.2",
  "main": "dist/vanilla-sharing.cjs.js",
  "module": "dist/vanilla-sharing.esm.js",
  "browser": "dist/vanilla-sharing.umd.js",
  "scripts": {
    "precommit": "lint-staged",
    "size": "size-limit",
    "prebuild": "npm run build:clean",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "build:clean": "rimraf ./dist",
    "lint": "eslint --ignore-path .gitignore . --ignore-pattern dist",
    "pretest": "npm run test:clean && npm run lint && npm run size",
    "test:clean": "rimraf ./coverage",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "prepublishOnly": "npm run build",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": "git@github.com:avdeev/vanilla-sharing.git",
  "author": "Alexey Avdeev <aad.jerry@gmail.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "size-limit": [
    {
      "path": "dist/vanilla-sharing.umd.js",
      "limit": "1.08 KB"
    }
  ],
  "lint-staged": {
    "*.js": "lint"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "env"
        ]
      },
      "development": {
        "presets": [
          [
            "env",
            {
              "modules": false
            }
          ]
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "env": {
      "browser": true,
      "jest": true,
      "es6": true
    },
    "settings": {
      "import/resolver": "webpack"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/main.js",
      "!src/**/*.test.{js,jsx}"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testRegex": "tests/.*\\.test\\.js$"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.3",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.6.1",
    "coveralls": "3.0.0",
    "eslint": "4.13.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-import-resolver-webpack": "0.8.3",
    "eslint-plugin-import": "2.8.0",
    "faker": "4.1.0",
    "husky": "0.14.3",
    "jest-cli": "22.0.3",
    "lint-staged": "6.0.0",
    "rimraf": "2.6.2",
    "rollup": "0.50.0",
    "rollup-plugin-babel": "3.0.3",
    "size-limit": "0.13.2"
  }
}
